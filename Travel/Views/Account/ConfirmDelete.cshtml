@model ApplicationUser

@{
    ViewData["Title"] = "ConfirmDelete";
}

<h1>ConfirmDelete</h1>

<p>
    Are you sure you want to delete the user with the username:
    <strong>@Model.UserName</strong>?
</p>
<form asp-controller="Account" asp-action="DeleteConfirmed" method="post" class="custom-form">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete User" class="btn btn-danger" /> |
    <a asp-controller="Manage" asp-action="Index">Return to manage</a>
</form>
